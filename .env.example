# RTSP to WebRTC Media Server - Environment Configuration
# Copy this file to .env and configure with your settings

# Server Configuration
HTTP_PORT=8080
WS_PORT=8081
METRICS_PORT=9090
PRODUCTION=false

# Timezone
TZ=Asia/Seoul

# Log Configuration
LOG_LEVEL=info
LOG_OUTPUT=both
LOG_FILE_PATH=logs/media-server.log

# RTSP Camera Configuration
# Format: rtsp://[username]:[password]@[host]:[port]/[path]
# Special characters in password must be URL-encoded (!=%21, @=%40, #=%23)

# Camera 1 (Always-on, H265)
CAMERA_01_ID=plx_cctv_01
CAMERA_01_SOURCE=rtsp://admin:password@192.168.4.121:554/Streaming/Channels/101
CAMERA_01_ON_DEMAND=no

# Camera 2 (On-demand, H264)
CAMERA_02_ID=plx_cctv_02
CAMERA_02_SOURCE=rtsp://admin:password%21@192.168.4.54:554/profile2/media.smp
CAMERA_02_ON_DEMAND=yes

# Camera 3 (On-demand, H265)
CAMERA_03_ID=plx_cctv_03
CAMERA_03_SOURCE=rtsp://admin:password%21%40%23@192.168.4.46:554/Streaming/Channels/101
CAMERA_03_ON_DEMAND=yes

# Camera 4 (External network, on-demand)
CAMERA_04_ID=park_cctv_01
CAMERA_04_SOURCE=rtsp://121.190.36.211:1031
CAMERA_04_ON_DEMAND=yes

# WebRTC Configuration
STUN_SERVER_1=stun:stun.l.google.com:19302
STUN_SERVER_2=stun:stun1.l.google.com:19302

# Performance Tuning
MAX_STREAMS=100
MAX_PEERS=1000
WORKER_POOL_SIZE=100
GC_PERCENT=50

# Monitoring (Optional)
PROMETHEUS_ENABLED=true
PROMETHEUS_INTERVAL=10

# Grafana (Optional, only if using monitoring profile)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme
